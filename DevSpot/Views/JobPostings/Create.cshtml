@model DevSpot.ViewModels.JobPostingViewModel



<div class="container mt-5">
	
	<form method="post" action="Create">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="Title" class="form-label">Title</label>
			<input asp-for="Title" class="form-control" id="Title" aria-describedby="emailHelp" placeholder="Enter Job Title">
		</div>
		<div class="mb-3">
			<label asp-for="Description" class="form-label">Please Enter the Job Description</label>
			<textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
			<span asp-validation-for="Description" class="text-bg-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Company" class="form-label">Company</label>
			<input asp-for="Company" class="form-control" id="Company" placeholder="Company Here">
		</div>
		<div class="mb-4">
			<label asp-for="Location" class="form-label">Please Enter the Job Location</label>
			<input asp-for="Location" class="form-control" id="Location" placeholder="Location">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>

<script src="https://cdn.tiny.cloud/1/jfvxgxv0kp0zol4hfj15m9lik7i6mgmfufourkp49i46azti/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
	tinymce.init({
		selector: '#Description',
		plugins: 'lists',
		toolbar: 'undo redo | bold italic | bullist numlist outdent indent',
		menubar: false
	});
</script>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />

}
