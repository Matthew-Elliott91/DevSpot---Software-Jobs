@using DevSpot.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevSpot</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevSpot.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="JobPostings" asp-action="Index">DevSpot</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
	                <ul class="navbar-nav flex-grow-1">
		                <li class="nav-item">
							<a class=" nav-link text-dark" asp-area="" asp-controller="JobPostings" asp-action="ExternalJobPostings"> <img src="~/images/Flag_of_Yorkshire.svg.png" alt="Yorkshire Flag" style="height: 20px; margin-right: 5px;" /> Yorkshire Job Postings</a>
		                </li>
		                <li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="JobPostings" asp-action="Index">Direct Listings</a>
		                </li>
		                <li class="nav-item">
			                <a class="nav-link text-dark" asp-area="" asp-controller="JobPostings" asp-action="Create">Create Job</a>
		                </li>
		                @if (User.IsInRole(Roles.Employer))
		                {
			                <li class="nav-item">
				                <a class="nav-link text-dark" asp-area="" asp-controller="JobPostings" asp-action="MyJobPostings">My Job Postings</a>
			                </li>
		                }
		                <li class="nav-item">
			                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		                </li>
		                <li class="nav-item">
			                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
				                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			                </form>
		                </li>
	                </ul>
                </div>
            </div>
        </nav>
    </header>
<div class="container">
	@if (TempData["LogoutMessage"] != null)
	{
		<div class="alert alert-success" role="alert">
			@TempData["LogoutMessage"]
		</div>
	}
	<div class="card bg-secondary text-white mb-3">
		<div class="card-body">
			<h2 class="card-title text-center">@ViewData["Title"]</h2>
		</div>
	</div>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

    <footer class="border-top footer text-muted">
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
